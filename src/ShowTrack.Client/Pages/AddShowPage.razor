@using ShowTrack.Contracts.Dtos

@inject DialogService DialogService

<div>
    <RadzenRow>
        <RadzenColumn Size="12">
            <RadzenFormField Text="Title" Style="width: 100%;">
                <RadzenTextBox @bind-Value="@NewShow.Title" Style="width: 100%;" />
            </RadzenFormField>
        </RadzenColumn>
        <RadzenColumn Size="12">
            <RadzenFormField Text="Current Season" Style="width: 100%;">
                <RadzenTextBox @bind-Value="@NewShow.CurrentSeason" Style="width: 100%;" />
            </RadzenFormField>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow Style="margin-top:10px">
        <RadzenColumn Size="2" Offset="8">
            <RadzenButton ButtonStyle="ButtonStyle.Danger" Click="() => DialogService.Close(null)" Text="Cancel" Style="width:100%" />
        </RadzenColumn>
        <RadzenColumn Size="2">
            <RadzenButton ButtonStyle="ButtonStyle.Success" Click="() => DialogService.Close(NewShow)" Text="Add" Style="width:100%" />
        </RadzenColumn>
    </RadzenRow>
</div>

@code {
    private CreateShowDto NewShow { get; } = CreateShowDto.New();
}
